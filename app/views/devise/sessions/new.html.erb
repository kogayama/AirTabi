<div class="row">
  <div class="col-md-4 offset-md-4">
    <h2 class="pb-4 text-center">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
      </div>

    <div class="pb-3"> 
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %> 保存する
      <% end %>
      <span class="float-right">
        <%= link_to('パスワードを忘れましたか？', new_user_password_path) %>
      </span>
    </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
