<div class="row">
  <div class="col-md-4 offset-md-4">
    <h2 clas="text-center pb-4">パスワードを変更する</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワード変更", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>