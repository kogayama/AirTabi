<div class="row">
  <div class="col-md-4 offset-md-4">
    <h2 class="pb-4 text-center">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.email_field :fullname, autofocus: true, autocomplete: "email", placeholder: "Fullname", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :email, autocomplete: "new-password", placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group pb-2">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>