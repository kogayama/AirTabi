<div class="row">
  <div class="col-md-3">
    <div class="center">
      <div class="card">
        <%= image_tag user_image_url(@user), class: "rounded-circle avatar_full" %>
        <div class="card-body">
          <h5 class="card-title">Card title</h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>  
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2><%= @user.fullname %></h2>
    <div class="description">
      <%= @user.description %>
    </div>
  </div>
</div>