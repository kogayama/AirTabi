<div class="row">
  <div class="col-md-3">
    <%= render "room_menu" %>
  </div>

  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        場所
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_with model: @room do |f| %>
            <div class="row">
              <div class="form-group">
                <%= f.text_field :address, placeholder: "住所を入力してください。", class: "form-control" %>
              </div>
            </div>
            <div class="text-center">
              <%= f.submit "保存", class: "btn btn-form" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>