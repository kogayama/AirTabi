<div class="row">
  <div class="col-md-3">
    <%= render "room_menu" %>
  </div>

  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        料金
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_with model: @room do |f| %>
              <div class="row">
              <div class="form-group max-width">
                <%= f.text_field :price, placeholder: "例）12000", class: "form-control", required: true %>
              </div>
            </div>
            <div class="text-center">
              <%= f.submit "保存", class: "btn btn-form" %>
            </div>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>